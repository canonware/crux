# Test random tree creation.

import random

print "Test begin"

# Re-seed the PRNG so that test results are repeatable.
random.seed(42)

taxonMap = Crux.TaxonMap.TaxonMap(["T%d" % i for i in xrange(100)])

for i in xrange(21):
    print "Taxa: %d" % i
    t = Crux.Tree.Tree(i, taxonMap=taxonMap, rooted=True)
    print "  [&r] %s" % t.render(labels=True)
    t = Crux.Tree.Tree(i, taxonMap=taxonMap, rooted=False)
    print "  [&u] %s" % t.render(labels=True)

print "Test end"
