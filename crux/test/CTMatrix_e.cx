for s in dnaTestStrs:
    matrix = Crux.CTMatrix.CTMatrix(s, Crux.Character.Dna)
    alignment = Crux.CTMatrix.Alignment(matrix)

    print "# Basic"
    for j in xrange(alignment.nchars):
        print alignment.getFreq(j),
    print
    print alignment.fastaPrint()

    alignment.compact()

    print "# Compact"
    for j in xrange(alignment.nchars):
        print alignment.getFreq(j),
    print
    print alignment.fastaPrint()

    alignment.compact(fitch=True)

    print "# Fitch compact"
    for j in xrange(alignment.nchars):
        print alignment.getFreq(j),
    print
    print alignment.fastaPrint()

    alignment.pad('-', 4)

    print "# Fitch compact plus pad"
    for j in xrange(alignment.nchars):
        print alignment.getFreq(j),
    print
    print alignment.fastaPrint()

